                       <Image url="@images/icons8-delete-30.png" />
                   </ImageView>
               </graphic>
            </Button>
            <Button fx:id="Search" mnemonicParsing="false" prefHeight="96.0" prefWidth="138.0" text="Search">
               <graphic>
                   <ImageView fitHeight="41.0" fitWidth="42.0" pickOnBounds="true" preserveRatio="true">
                       <Image url="@images/icons8-search-30.png" />
                   </ImageView>
               </graphic>
            </Button>
            <Button fx:id="Update" mnemonicParsing="false" onAction="#showUpdatePanel" prefHeight="102.0" prefWidth="138.0" text="Update">
